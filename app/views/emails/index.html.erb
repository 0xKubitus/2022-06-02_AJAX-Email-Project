<div id="project-header">
  <h1 style="color: red;">Gmail-like Project:</h1>
  <h3>my fake Inbox using AJAX</h3>

  <br>

  <div>
    <%= button_to 'New Email', emails_path, remote: true, class: "btn btn-danger", id: "new-email-btn" %>
    <p id="notice"><%= notice %></p>
  </div>
</div>


<br>


<!-- CONTAINER PRINCIPAL DES EMAILS -->
<section id="mailbox-main">

  <!-- TABLEAU DE GAUCHE -->
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr class="emails-tr">
        <th class="text-center" style="line-height: 30px;">Emails' List:</th>
      </tr>
    </thead>
    <tbody id="emails-list">
      <% @emails.each do |email| %>
        <tr id="email-<%=email.id%>-object">
          <td>
            <%= link_to "#{email.object}", email_path(email), id: "email-#{email.id}-object-link", remote: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- PARTIE DROITE = "Email Sélectionné" -->
  <div id="selected-email-container">
    <div id="selected-email-header-div">
      <p id="selected-email-header">Selected Email:</p>
    </div>
    <div id="selected-email-block">
      <%# <p id="selected-email-text"><em>-- no email opened yet --</em></p> %>
    </div>
  </div>

</section> 
