<div id="email-<%=email.id%>-body-div">

  <p id="email-<%=email.id%>-body"><%= email.body %></p>

  <br/>

  <div style="margin-top: 30px; display: flex;">
    <button style="background-color: lightgrey">Mark as "Read"/"Unread"</button>
    <%= button_to('Delete Email', email_path(@email), method: "delete", remote: true, data: { confirm: 'Are you sure?', disable_with: 'loading...' }, style: 'background-color: lightcoral;') %>
  </div>

</div>